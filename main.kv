ScreenManager:
    PicSwap:
        name: "picWindow"
    VidSwap:
        name: "vidWindow"

<PicSwap>:
    GridLayout:

        name: "picWindow"

        cols: 1
        rows : 3
        size: root.width, root.height

        GridLayout:
            cols:2
            size_hint: 1 , .3

            Label:
                text: "PicSwap"
                bold: True
                font_size: 45
                background_color: 0.141, 0.255, 0.922, 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Button:
                text:"VidSwap"
                background_normal : ''
                background_color: 0.922, 0.329, 0.141 , 1
                size_hint: .2 , 1
                on_release: 
                    app.root.current = "vidWindow" 
                    root.manager.transition.direction = "left"

        BoxLayout:
            orientation: 'horizontal'
            spacing : 5
            cols:2

            Image:
                id: img1
                source: ''
                size: root.width, root.height

            Image:
                id: img2
                source: ''
                size: root.width, root.height

        GridLayout:
            cols:3
            size_hint: 1 , .3

            Button:
                text: "Insert Image 1"
                on_press: root.file_chooser_1()
                   

            Button:
                text: "Insert Image 2"
                on_press: root.file_chooser_2()
            Button:
                text: "Faceswapp"
                on_release: root.update_result()

<VidSwap>:
    GridLayout:

        name: "vidWindow"

        cols: 1
        rows : 3
        size: root.width, root.height

        GridLayout:
            cols:2
            size_hint: 1 , .3

            Label:
                text: "VidSwap"
                bold: True
                font_size: 45
                background_color: 0.922, 0.329, 0.141 , 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Button:
                text:"PicSwap"
                background_normal : ''
                background_color: 0.141, 0.255, 0.922, 1
                size_hint: .2 , 1
                on_release: 
                    app.root.current = "picWindow" 
                    root.manager.transition.direction = "right"
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            cols: 2

            Image:
                id: img
                source: ''
                size: root.width, root.height

            Image:
                id: vidfeed
                source: ''
                play: False
                size: root.width, root.height

        GridLayout:
            cols:2
            size_hint: 1 , .3

            Button:
                text: "Upload Image"
                on_press: root.file_chooser()
                   

            Button:
                id: playpause
                text: "Toggle Camera"
                on_press: root.toggle_camera()